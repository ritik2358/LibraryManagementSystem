@{
    ViewBag.Title = "Librarian Dashboard";
}

<h2>@ViewBag.WelcomeMessage</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Please Click on the options that you want to perform : </h4>
        <ul class="list-group">
            <li class="list-group-item"><a href="@Url.Action("AddPublication", "Librarian")">Add Publication</a></li>
            <li class="list-group-item"><a href="@Url.Action("AddBookStock", "Librarian")">Add Book Stock</a></li>
            <li class="list-group-item"><a href="@Url.Action("AddBranch", "Librarian")">Add Branch</a></li>
            <li class="list-group-item"><a href="@Url.Action("AddStudent", "Librarian")">Add Student</a></li>
            <li class="list-group-item"><a href="@Url.Action("IssueBook", "Librarian")">Issue Books</a></li>
            <li class="list-group-item"><a href="@Url.Action("ReturnBook", "Librarian")">Return Books</a></li>
            <li class="list-group-item"><a href="@Url.Action("Index", "Home")">Back to Main Menu</a></li>
        </ul>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else
{ <div class="alert alert-danger">
    @TempData["ErrorMessage"]
    </div>
}


